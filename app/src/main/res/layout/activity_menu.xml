<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context="com.example.user.devn.MenuActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:background="@android:drawable/checkbox_off_background"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="NEW GAME"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/continueButton"
        android:layout_toStartOf="@+id/continueButton"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:background="@android:drawable/checkbox_off_background"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="SETTING"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:background="@android:drawable/checkbox_off_background"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="CONTINUE"
        android:visibility="visible"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/settingButton"
        android:layout_toStartOf="@+id/settingButton" />

</RelativeLayout>

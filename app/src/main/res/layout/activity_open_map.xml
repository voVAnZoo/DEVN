<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.user.devn.OpenMapActivity">

    <Button
        android:id="@+id/contin"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/picture_frame"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Continue"
        app:layout_constraintBaseline_toBaselineOf="@+id/del"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/del"
        android:layout_width="190dp"

        android:layout_height="70dp"
        android:background="@android:drawable/picture_frame"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="delete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ListView
        android:id="@+id/lvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/del"
        app:layout_constraintTop_toTopOf="@+id/del"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />


</android.support.constraint.ConstraintLayout>